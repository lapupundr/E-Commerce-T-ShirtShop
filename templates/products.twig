<div class="container">
    <header>{% include 'header.twig' %}</header>

    <aside>
        {% include 'aside.twig' %}
    </aside>
    <main>Main
        {% include 'catalog/body.twig' %}

        {% for el in page %}
            {% include  el.block ~ '/body.twig' %}
        {% endfor %}
    </main>

    <footer>
        {% include 'footer.twig' %}
    </footer>
</div>

<style>
    div {
        border: 1px solid black;
    }

    .container {
        display: grid;
        grid-template-columns: 0.8fr 1.2fr 1fr;
        grid-template-rows: 0.5fr 2.1fr 0.4fr;
        gap: 0px 0px;
        grid-auto-flow: row;
        grid-template-areas:
    "header header header"
    "left content content"
    "footer footer footer";
    }

    header {
        grid-area: header;
    }

    aside {
        grid-area: left;
    }

    main {
        grid-area: content;
    }

    footer {
        grid-area: footer;
    }

</style>